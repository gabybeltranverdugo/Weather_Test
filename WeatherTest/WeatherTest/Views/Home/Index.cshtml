
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/angular.min.js"></script>


    @*<link href="~/Content/all.min.css" rel="stylesheet" />*@
    <link href="~/Content/sb-admin-2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.9/angular-material.min.css">
    @*<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">*@

    <script src="~/scripts/jquery.min.js"></script>
    <script src="~/scripts/bootstrap.bundle.min.js"></script>
    <script src="~/scripts/jquery.easing.min.js"></script>
    <script src="~/scripts/sb-admin-2.min.js"></script>
    <script src="~/scripts/Chart.min.js"></script>
    <script src="~/scripts/angular-chart.min.js"></script>

    <!-- Angular Material Dependencies -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.2/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.2/angular-animate.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.2/angular-aria.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.2/angular-messages.min.js"></script>

    <!-- Angular Material Javascript now available via Google CDN; version 1.1.9 used here -->
    <script src="https://ajax.googleapis.com/ajax/libs/angular_material/1.1.9/angular-material.min.js"></script> 

    <script src="~/scripts/AngularJS/HomeJS.js"></script>
</head>
<body>
    <div ng-app="HomeJS" ng-controller="HomeController">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">Weather Test</a>
            <div class="collapse navbar-collapse" id="navbarColor03">
                <div class="row">
                    <div class="col-lg-4">
                        <select class="custom-select" ng-model="city_id" ng-change="api_result()">
                            <option data-ng-repeat="x in citylist" ng-value="x.City_id">
                                {{x.name}}
                            </option>
                        </select>
                    </div>
                    <div class="col-lg-4">
                        <select class="custom-select" ng-model="unit_id" ng-change="api_result()">
                            <option data-ng-repeat="u in unitlist" ng-value="u.Unit_id">
                                {{u.name}}
                            </option>
                        </select>
                    </div>
                    <div class="col-lg-3">
                        <md-datepicker ng-model="myDate" ng-change="api_result()" md-placeholder="Enter date"></md-datepicker>
                    </div>
                </div>
            </div>
        </nav>
        <hr />
        @*<p>{{today | date:'yyyy-MM-dd'}}</p>*@
        <div class="row">
            <div class="col-lg-3">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            Temperatures Table
                        </h6>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr class="table-active">
                                    <td>
                                        Date:
                                    </td>
                                    <td align="right">
                                        Temperature:
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="r in api_response.data">
                                    <td>
                                        {{r.datetime}}
                                    </td>
                                    <td align="right">
                                        {{r.temp}}°
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="card shadow mb-5">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">
                            Temperatures Scale
                        </h6>
                    </div>
                    <div class="card-body">
                        <canvas id="line" class="chart chart-line" chart-data="data"
                                chart-labels="labels" chart-series="series" chart-options="options"
                                chart-dataset-override="datasetOverride" chart-click="onClick"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
